  <script>

    const searchResult = document.getElementById("searchResult")
    
    const search = document.getElementById("search")
    
    async function searchFilter(){
      searchResult.innerHTML = ""

      if(search.value==""){
        searchResult.innerHTML = ""
        searchResult.classList.add("d-none")
        return 0
      }
      
      if(search.value==" "){
        search.value = null
        return 1
      }

      console.log(search.value)

      const result = await fetch('/search', {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify({search: search.value})
      })

      const data = await result.json()

      console.log( data.product)

      searchResult.classList.remove("d-none")

      if(!data.product.length){
        searchResult.classList.add("d-none")
      }

      for(let i=0; i<data.product.length; i++){
        searchResult.insertAdjacentHTML('beforeend', `
            <div class="">
              <a href="/search?name=${data.product[i].name}" class="text-decoration-none text-dark d-flex justify-content-between  align-items-center">
                <p class="mb-0">${data.product[i].name}</p>
                <img src="/${data.product[i].variant.image[0]}" style="max-width: 40px; max-height: 40px">
              </a>
              
                <hr class="m-1">
            </div>
                `)
              }
              
              
              // <img src="/${data.product.variant.image[0]}" style="max-width: 40px; max-height: 40px">
    }

   
    // search.addEventListener('change', async (event) => {
    //   event.preventDefault()
      
    // })

    document.getElementById("appyBtn").addEventListener('click', async (event) => {

      event.preventDefault()

      const catogories = document.querySelectorAll('input[name="category"]:checked')
      const brands = document.querySelectorAll('input[name="brand"]:checked')
      const min = document.getElementById("min").value
      const max = document.getElementById("max").value
      const sort = document.querySelector('input[name="sort"]:checked').value;
      // const sortProduct = document.querySelector('input[name="sortProduct"]:checked').value;

      const category = Array.from(catogories).map(ele => ele.value)
      const brand = Array.from(brands).map(ele => ele.value)


      // `/allProducts?category=${category.join(",")}&brand=${brand.join(",")}&min=${min}&max=${max}&sort=${sort}`

      const result = await fetch('/filter', {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify({ category, brand, min, max, sort })
      })

      if(result.status==200){
        window.location.href = '/allProducts'
      }
      
      // console.log(category, brand, min, max)

    })

    
    
    function viewProduct(id){
      window.location.href = `/productDetail/${id}`
    }

