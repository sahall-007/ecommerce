              <div class="row row-cols-2 row-cols-md-3 row-cols-xl-4  g-4">
                <% allProducts.forEach(ele => { %>
                  <% if(ele.category.isListed && ele.product.isListed ){ %>
                    <div class="col" onclick='viewProduct("<%= ele._id %>")'>
                      <div class="card product-card  border-1  border-dark  shadow-sm">
                        <img src="/<%= ele.image[0] %>" class="card-img-top ">
                        <div class="card-body text-center">
                          <h6 class=""><%= ele.product.name %></h6>
                          <p class="" style="font-size: small;"><%= ele.ram %> | <%= ele.storage %> | <%= ele.color %></p>

                          <% 
                            let price1 = Number(ele.price); 
                            let discount1 = Number(ele.product.discount); 
                            let offAmount1 = price1 * (discount1 / 100); 
                            let finalPrice1 = Math.floor(price1 - offAmount1);
                          %>

