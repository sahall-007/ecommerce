                  <h6 class=""><%= ele.productDoc.name %></h6>
                  <p class="" style="font-size: small;"><%= ele.ram %> | <%= ele.storage %> | <%= ele.color %></p>

                  <% 
                    let price2 = Number(ele.price); 
                    let discount2 = Number(ele.productDoc.discount); 
                    let offAmount2 = price2 * (discount2 / 100); 
                    let finalPrice2 = Math.floor(price2 - offAmount2);
                  %>

                  <div class="d-flex gap-3 justify-content-center">
                    <p class="text-success" style="font-size: small;">&#8377; <%= finalPrice2 %></p>
                    <p class="text-decoration-line-through text-danger" style="font-size: small;">&#8377; <%= ele.price %></p>
                  </div>
                  <button class="btn btn-outline-primary btn-sm">Add to Cart</button>
                </div>
              </div>
            </div>  
          <% } %>        
        <% }) %>
        

      </div>
    </div>
