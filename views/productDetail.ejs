<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Product Details</title>
  <link rel="stylesheet" href="/magnifier/magnify.css">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js" charset="UTF-8"></script>
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Titillium+Web:ital,wght@0,200;0,300;0,400;0,600;0,700;0,900;1,200;1,300;1,400;1,600;1,700&display=swap" rel="stylesheet">
  <style>
    body{
      font-family: "Titillium Web", sans-serif;
    }
    .thumb-img {
      width: 70px;
      cursor: pointer;
      border-radius: 6px;
    }
    .thumb-img:hover {
      border: 1px solid #000;
    }
    .main-img {
      width: 100%;
      border-radius: 8px;
    }
    .price-old {
      text-decoration: line-through;
      color: gray;
      font-size: 14px;
    }

    .navbar-brand { font-weight: bold; font-size: 1.5rem; }
    .category-card img { height: 200px; object-fit: cover; border-radius: 0.75rem; }
    .product-card img { height: 250px; object-fit: cover;  }
    .nav-detail-container {
  max-width: 80%;
}
    
    .navbar {
      padding: 0.8rem 1rem;
    }

    .navbar .form-control {
      width: 220px;
      border-radius: 0.375rem 0 0 0.375rem;
    }

    .navbar .btn-outline-secondary {
      border-radius: 0 0.375rem 0.375rem 0;
    }

    .nav-link:hover {
      color: #0d6efd !important;
    }
    @media (min-width: 992px) {  /* lg and above */
        .thumb-img {
            width: 65px !important;
        }
    }

  </style>
</head>
<body class="bg-light">

  <nav  class="navbar navbar-expand-xl bg-black sticky-top shadow-sm">
    <div class="container nav-detail-container">
      <!-- Brand -->
      <a class="navbar-brand text-light fw-bold d-flex align-items-center" href="#">
        <i class="bi bi-box me-2"></i> ShopEase
      </a>

      <div style="position: relative; width: 250px;">
              <input autocomplete="off" id="search" class="form-control rounded w-100" name="name" type="search" oninput="searchFilter()" placeholder="Search..." aria-label="Search" />
              <!-- <button id="searchBtn" class="btn btn-outline-success" type="submit">Search</button> -->
               <div class="p-3 d-none" id="searchResult"
                    style="
                      position: absolute;
                      top: 100%;
                      left: 0;
                      width: 100%;
                      background: white;                      
                      border-top: none;
                      border-radius: 5px;                      
                      overflow-y: auto;
                      z-index: 999;
                    ">
                </div>
          </div>

      <!-- Toggler -->
      <button class="navbar-toggler bg-light" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent">
        <span class="navbar-toggler-icon"></span>
      </button>

      <!-- Collapsible content -->
      <div class="collapse navbar-collapse" id="navbarContent">
        <!-- Center Nav Links -->
        <ul class="navbar-nav mx-auto text-center mb-2 mb-lg-0">
          <li class="nav-item"><a class="nav-link text-light active" href="/">Home</a></li>
          <li class="nav-item"><a class="nav-link text-light" href="#">Contact</a></li>
          <li class="nav-item"><a class="nav-link text-light" href="#">About Us</a></li>
          <li class="nav-item"><a class="nav-link text-light" href="/allProducts">Shop List</a></li>
          <li class="nav-item"><a class="nav-link text-light d-block d-xl-none" data-bs-toggle="modal" data-bs-target="#filterModal" >Filter</a></li>
        </ul>

        <!-- Right: Search + Icons -->
        <div class="d-lg-flex flex-column flex-lg-row align-items-center gap-5">
          <!-- Search bar -->
          

          <!-- Icons -->
          <div class="d-flex align-items-center justify-content-center gap-5 mt-lg-0 mt-3 mb-3 mb-lg-1">
            <a href="#" class="text-light"><i class="bi bi-heart"></i></a>
            <a href="#" class="text-light"><i class="bi bi-cart3"></i></a>
            <a href="/profile" class="text-light"><i class="bi bi-person-circle"></i></a>
          </div>
          
          <div class="d-flex justify-content-center">
            <a href="/logout" class="btn btn-outline-light">Logout</a>
          </div>

        </div>
        


      </div>

    </div>
  </nav>

<div class="container py-5 px-0 mx-auto mt-5 nav-detail-container">
    <div class="row g-4 justify-content-around">
      <% if(variant[0].categoryDoc.isListed && variant[0].productDoc.isListed && variant[0].isListed && variant[0].brand.isListed){ %>
        <div class="col-lg-5 d-flex flex-column flex-lg-row align-items-start gap-5">

            <!-- Big Image -->

            
            <img src="/<%= variant[0].image[0] %>" 
                class="main-img mb-3 mb-lg-0 me-lg-5 w-100 zoom" 
                id="mainImage" data-magnify-src="/<%= variant[0].image[0] %>">

            <!-- Thumbnail Images -->
            <div class="d-flex flex-row flex-lg-column gap-2">
              <% variant.forEach(ele => { %>
                <% ele.image.forEach(image => { %>
                  <img src="/<%= image %>" class="thumb-img " onclick="changeImage(this)" />
                <% }) %>
              <% }) %>
                <!-- <img src="/uploads/image-1-1762263599050-cropped-1.jpeg" class="thumb-img " onclick="changeImage(this.src)" />
                <img src="/uploads/image-1-1762263599049-cropped-0.jpeg" class="thumb-img" onclick="changeImage(this.src)" />
                <img src="/uploads/image-1-1762263599056-cropped-2.jpeg" class="thumb-img" onclick="changeImage(this.src)" />
                <img src="/uploads/image-1-1762305360199-cropped-1.jpeg" class="thumb-img" onclick="changeImage(this.src)" /> -->
            </div>

        </div>

        <div class="col-lg-5 d-flex justify-content-center align-items-center">
            <div>
                <h3><%= variant[0].productDoc.name %></h3>
                <p class="text-warning">★★★★★ <span class="text-muted">(4 reviews)</span></p>
                <p class="fs-5 mb-3">PlayStation5 Digital Edition The PS5 Digital Edition unleashes new gaming possibilities that you never anticipated. *PS5 Digital Edition (CFI-2000 model group slim).</p>

                <% 
                  let price1 = Number(variant[0].price); 
                  let discount1 = Number(variant[0].productDoc.discount); 
                  let offAmount1 = price1 * (discount1 / 100); 
                  let finalPrice1 = Math.floor(price1 - offAmount1);
                %>

                <h4 class=" fs-2 fw-bold"><%= finalPrice1 %> <span class="price-old fs-3"><%= variant[0].price %></span> <span class="text-success"><%= variant[0].productDoc.discount %>% off</span></h4>

                <label class="mt-3 d-block">Variant:</label>
                <select class="form-select w-50 mb-4" onchange='variantOption()' id="variantOptions">
                  <option value=""><%= variant[0].ram %> - <%= variant[0].storage %> - <%= variant[0].color %></option>
                  <% variantOptions.forEach(ele => { %>
                    <% if (ele.color !== variant[0].color) { %>
                      <option value="<%= ele._id %>"><%= ele.ram %> - <%= ele.storage %> - <%= ele.color %></option>
                    <% } %>
                  <% }) %>
                </select>

                <button class="btn btn-danger me-3 px-4">Buy Now</button>
                <button class="btn btn-dark px-4">Add to Cart</button>
            </div>

        </div>
      <% } else{ %>
         <!-- <div class="col-10 col-md-6 col-lg-4">
          <div class="card text-center border-danger shadow-sm">
            <div class="card-body">
              <h5 class="card-title text-danger fw-bold">Product Blocked</h5>
              <p class="card-text text-muted">
                This product is currently unavailable because it has been blocked by the administrator.
              </p>
            </div>
            <div class="card-footer bg-danger text-white fw-semibold">
              Contact Support for Assistance
            </div>
          </div>
        </div> -->


        <script>
            window.location.href = "/";
        </script>

      <% } %>
    </div>
</div>

<section id="trending" class="bg-light py-5">
    <div class="container">
        <div class="d-flex justify-content-between">
            <h2 class=" mb-3">Explore More</h2>
            <a href="/allProducts" class="btn btn-outline-dark align-self-end fs-6 text-decoration-none mb-1">More ></a>
        </div>
      <div class="row row-cols-2 row-cols-md-3 row-cols-xl-4 row-cols-xxl-5 g-4">
       <% exploreMore.forEach(ele => { %>
        <% if(ele.categoryDoc.isListed && ele.productDoc.isListed ){ %>
          <div class="col "  onclick='viewProduct("<%= ele._id %>")'>
            <div class="card product-card border border-1  border-dark shadow-sm">
              <img src="/<%= ele.image[0] %>" class="card-img-top ">
              <div class="card-body text-center">
                <h6 class=""><%= ele.productDoc.name %></h6>
                <p class="" style="font-size: small;"><%= ele.ram %> | <%= ele.storage %> | <%= ele.color %></p>

                <% 
                  let price2 = Number(ele.price); 
                  let discount2 = Number(ele.productDoc.discount); 
                  let offAmount2 = price2 * (discount2 / 100); 
                  let finalPrice2 = Math.floor(price2 - offAmount2);
                %>

                <div class="d-flex gap-3 justify-content-center">
                  <p class="text-success" style="font-size: small;">&#8377; <%= finalPrice2 %></p>
                  <p class="text-decoration-line-through text-danger" style="font-size: small;">&#8377; <%= ele.price %></p>
                </div>
                <button class="btn btn-outline-primary btn-sm">Add to Cart</button>
              </div>
            </div>
          </div>    
          <% } %>      
        <% }) %>
      </div>
    </div>
  </section>

  <script src="/magnifier/jquery.magnify.js" charset="UTF-8"></script>
  <script>
    $(document).ready(function() {
        $('.zoom').magnify();
    });
</script>

<script>

  function variantOption(variantId){
    const variantOptions = document.getElementById("variantOptions").value
    window.location.href = `/productDetail/${variantOptions}`
  }

    async function searchFilter(){
      searchResult.innerHTML = ""

      if(search.value==""){
        searchResult.innerHTML = ""
        searchResult.classList.add("d-none")
        return 0
      }
      
      if(search.value==" "){
        search.value = null
        return 1
      }

      console.log(search.value)

      const result = await fetch('/search', {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify({search: search.value})
      })

      const data = await result.json()

      console.log( data.product)

      searchResult.classList.remove("d-none")

      if(!data.product.length){
        searchResult.classList.add("d-none")
      }

      for(let i=0; i<data.product.length; i++){
        searchResult.insertAdjacentHTML('beforeend', `
            <div class="">
              <a href="/search?name=${data.product[i].name}" class="text-decoration-none text-dark d-flex justify-content-between  align-items-center">
                <p class="mb-0">${data.product[i].name}</p>
                <img src="/${data.product[i].variant.image[0]}" style="max-width: 40px; max-height: 40px">
              </a>
              
                <hr class="m-1">
            </div>
                `)
              }
              
              
              // <img src="/${data.product.variant.image[0]}" style="max-width: 40px; max-height: 40px">
    }


  function changeImage(element) {
    
    const mainImg = document.getElementById("mainImage");

    // const reletiveSrc = element.getAttribute("src")

    
    // console.log(reletiveSrc)
   
    mainImg.src = element.src
    

    mainImg.setAttribute("data-magnify-src", element.src);

    const extra = document.querySelector(".magnify-lens")
    extra.style.background = `url(${element.src})`

    // new Magnify(mainImg)
  }
  function viewProduct(id){
      window.location.href = `/productDetail/${id}`
  }
</script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
