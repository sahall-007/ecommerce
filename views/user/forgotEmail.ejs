<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Forgot Password â€” Enter Email</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB" crossorigin="anonymous">
    <style>
        :root {
            --bg: #f4f6fb;
            --card: #ffffff;
            --accent: #2563eb;
            --muted: #6b7280;
            --success: #16a34a;
            --danger: #dc2626;
            font-family: Inter, system-ui, -apple-system, "Segoe UI", Roboto, "Helvetica Neue", Arial;
        }

        * {
            box-sizing: border-box
        }

        html,
        body {
            height: 100%;
            margin: 0;
            background: linear-gradient(180deg, var(--bg), #eef2ff);
        }

        .container {
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 24px;
        }

        .card {
            width: 100%;
            max-width: 520px;
            background: var(--card);
            border-radius: 12px;
            box-shadow: 0 6px 24px rgba(16, 24, 40, 0.08);
            padding: 28px;
            display: flex;
            flex-direction: column;
            gap: 18px;
        }

        .brand {
            display: flex;
            gap: 12px;
            align-items: center
        }

        h1 {
            font-size: 20px;
            margin: 0
        }

        p.lead {
            margin: 0;
            color: var(--muted);
            line-height: 1.4
        }

        label {
            font-size: 13px;
            color: #111827;
            margin-bottom: 6px;
            display: block
        }

        .input-group {
            display: flex;
            flex-direction: column;
            gap: 6px
        }

        input[type="email"] {
            padding: 12px 14px;
            border-radius: 8px;
            border: 1px solid #e6e9ef;
            font-size: 15px;
            outline: none;
            transition: box-shadow .15s, border-color .15s;
        }

        input[type="email"]:focus {
            box-shadow: 0 0 0 4px rgba(37, 99, 235, 0.08);
            border-color: var(--accent)
        }

        .help {
            font-size: 13px;
            color: var(--muted)
        }

        .actions {
            display: flex;
            gap: 12px;
            align-items: center
        }

        .btn {
            padding: 10px 14px;
            border-radius: 8px;
            border: 0;
            font-weight: 600;
            cursor: pointer
        }

        .btn-primary {
            background: var(--accent);
            color: #fff
        }

        .btn-ghost {
            background: transparent;
            border: 1px solid #e6e9ef;
            color: #111827
        }

        .msg {
            font-size: 14px;
            padding: 12px;
            border-radius: 8px
        }

        .msg.success {
            background: #ecfdf5;
            color: var(--success);
            border: 1px solid rgba(34, 197, 94, 0.12)
        }

        .msg.error {
            background: #fff5f5;
            color: var(--danger);
            border: 1px solid rgba(220, 38, 38, 0.08)
        }

        .small {
            font-size: 13px;
            color: var(--muted)
        }

        /* responsive adjustments */
        @media (max-width:420px) {
            .card {
                padding: 18px;
                border-radius: 10px
            }

            h1 {
                font-size: 18px
            }
        }
    </style>
</head>

<body>
    <div class="container">
        <form method="post" action="/forgotEmailValidation" class="card" id="forgotForm" novalidate>
            <div class="brand">

                <div>
                    <h1>Forgot your password?</h1>
                    <p class="mt-3">Enter the email address associated with your account.</p>
                </div>
            </div>

            <div class="input-group">
                <label for="email">Email address</label>
                <input id="email" name="email" type="email" inputmode="email" placeholder="you@example.com"
                    autocomplete="email" aria-describedby="emailHelp" />
                <div id="emailHelp" class="help">We'll send a reset link to this address. Check spam if you don't see
                    it.</div>
            </div>

            <div id="feedback" aria-live="polite" style="display:none"></div>

            <div class="actions">
                <button type="submit" class="btn btn-primary" id="submitBtn">Send reset link</button>
                <button type="button" class="btn btn-ghost" id="cancelBtn">Cancel</button>
            </div>

            
        </form>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-FKyoEForCGlyvwx9Hj09JcYn3nv7wiPVlz7YYwJrWVcXK/BmnVDxM+D2scQbITxI"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        (function () {
            const form = document.getElementById('forgotForm');
            const email = document.getElementById('email');
            const feedback = document.getElementById('feedback');
            const submitBtn = document.getElementById('submitBtn');
            const cancelBtn = document.getElementById('cancelBtn');
            const resendBtn = document.getElementById('resendBtn');

            // simple email validator (RFC822-ish simplified)
            function isValidEmail(value) {
                // trim outer spaces but reject whitespace-only input
                if (value === '') return false;
                const trimmed = value.replace(/^\s+|\s+$/g, '');
                if (trimmed.length === 0) return false; // only spaces
                // basic email regex
                const re = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
                return re.test(trimmed);
            }

            function showMessage(type, text) {
                feedback.style.display = '';
                feedback.className = 'msg ' + (type === 'success' ? 'success' : 'error');
                feedback.textContent = text;
            }

            function clearMessage() {
                feedback.style.display = 'none';
                feedback.className = '';
                feedback.textContent = '';
            }

            form.addEventListener('submit', async function (ev) {
                ev.preventDefault();
                clearMessage();
                const raw = email.value;

                // allow user to submit empty? for forgot password we require email
                if (raw === '') {
                    showMessage('error', 'Please enter your email address.');
                    email.focus();
                    return;
                }

                if (!isValidEmail(raw)) {
                    showMessage('error', 'Please enter a valid email address.');
                    email.focus();
                    return;
                }

                // disable UI while "sending"
                


                const request = await fetch('/forgotEmailValidation', {
                    method: "POST",
                    headers: { "Content-Type": "application/json" },
                    body: JSON.stringify({ email: raw })
                })

                if(request.status==200){
                    window.location.href = "/forgotOtp"
                }
                else if(request.status==404){
                    swal.fire({
                        icon: "error",
                        title: "Error",
                        text: "This email does not exist"
                    })
                }

            });

            cancelBtn.addEventListener('click', () => {
                // go back to login or clear
                window.history.back();
            });

            

            // accessibility: press Enter on input submits; trim trailing/leading spaces on blur
            email.addEventListener('blur', () => {
                email.value = email.value.replace(/^\s+|\s+$/g, '');
            });

        })();
    </script>
</body>

</html>