  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  <script>

    window.addEventListener("unload", function () {});
    
    function viewProduct(id){
      window.location.href = `/productDetail/${id}`
    }

    async function addToCart(variantId){
      event.stopPropagation()
      try{
        const request = await fetch('/cart', {
          method: "POST",
          headers: {"Content-Type": "application/json" },
          body: JSON.stringify({ variantId })
        })
        if(request.status==200){
          window.location.href = '/cart'
        }
        else if(request.status==423){
          swal.fire({
            icon: "error",
            title: "Error",
            text: "The product is blocked by the Admin"
          })
        }
        else if(request.status==400){
          swal.fire({
            icon: "error",
            title: "Error",
            text: "You have reached max quantity limit for this product"
          })
        }
      }
      catch(err){
        alert("add to cart error"),
        console.log(err)
      }
    }

    async function addtoWishList(variantId, element) {
        event.stopPropagation()

        try {
          const request = await fetch('/wishlist', {
            method: "POST",
            headers: { "Content-Type": "application/json" },
            body: JSON.stringify({ variantId })
          })
          if (request.status == 200) {
            const nextEle = element.nextElementSibling
            element.classList.add("d-none")
            nextEle.classList.remove("d-none")
          }
          if (request.status == 423) {
            swal.fire({
              icon: "error",
              title: "Error",
              text: "The product is blocked by the Admin"
            })
          }
          else if (request.status == 400) {
            swal.fire({
              icon: "error",
              title: "Error",
              text: "You have reached max quantity limit for this product"
            })
          }
          else if (request.status == 404) {
            swal.fire({
              icon: "error",
              title: "Error",
              text: "Create an account to add to wishlist"
            })
          }
        }
        catch (err) {
          alert("add to cart error"),
            console.log(err)
        }
      }

    async function removeFromWishlist(variantId, element) {
        event.stopPropagation()
        try {
          const request = await fetch('/removefromWishlist', {
            method: "PATCH",
            headers: { "Content-Type": "application/json" },
            body: JSON.stringify({ variantId })
          })
          if (request.status == 200) {
            const notInWishlist = element.parentElement.querySelector(".notInWishlist")
            notInWishlist.classList.remove("d-none")
            element.classList.add("d-none")
          }
        }
        catch (err) {
          alert("remove from cart error")
          console.log(err)
        }

      }

    async function addNewtoWishList(variantId, element) {
        event.stopPropagation()
        try {
          const request = await fetch('/wishlist', {
            method: "POST",
            headers: { "Content-Type": "application/json" },
            body: JSON.stringify({ variantId })
          })
          if (request.status == 200) {
            window.location.reload()
          }
          else if (request.status == 423) {
            swal.fire({
              icon: "error",
              title: "Error",
              text: "The product is blocked by the Admin"
            })
          }
          else if (request.status == 400) {
            swal.fire({
              icon: "error",
              title: "Error",
              text: "You have reached max quantity limit for this product"
            })
          }
          else if (request.status == 404) {
            swal.fire({
              icon: "error",
              title: "Error",
              text: "Create an account to add to wishlist"
            })
          }
        }
        catch (err) {
          alert("add to cart error"),
            console.log(err)
        }
      }







  </script>
