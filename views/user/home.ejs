  <% let inWishlist=false %>

  <!--===================== NEW ARRIVALS ========================= -->
  <section id="featured" class="bg-light pb-5">
    <div class="container-sm">
        <div class="d-flex justify-content-between">
            <h2 class="fs-3 mb-3">New arrivals</h2>
            <a href="/newArrivals" class="btn btn-outline-dark align-self-end fs-6 text-decoration-none mb-1">More ></a>
        </div>
      <div class="row row-cols-2 row-cols-md-3 row-cols-xl-4 row-cols-xxl-5 g-4">
        <% newArrivals.forEach(ele => { %>
          <% if(ele.categoryDoc.isListed && ele.productDoc.isListed && ele.isListed  && ele.brand.isListed){ %>
            <div class="col" onclick='viewProduct("<%= ele._id %>")'>
              <div class="card product-card border border-0 shadow-sm position-relative" >
                <img src="<%= ele.image[0] %>" class="card-img-top">
                <div class="card-body text-center">
                  <h6 class=""><%= ele.productDoc.name %></h6>
                  <p class="" style="font-size: small;"><%= ele.ram %> | <%= ele.storage %> | <%= ele.color %></p>

                  <% 
                    let price1 = Number(ele.price); 
                    let discount1 = Number(ele.productDoc.discount); 
                    let offAmount1 = price1 * (discount1 / 100); 
                    let finalPrice1 = Math.floor(price1 - offAmount1);
                  %>

                  <div class="d-flex gap-3 justify-content-center">
                    <p class="text-success" style="font-size: small;">&#8377; <%= finalPrice1 %></p>
                    <div class="d-flex gap-1">
                      <p class="text-decoration-line-through text-danger" style="font-size: small;">&#8377; <%= ele.price %> </p>
                      <p class="text-dark" style="font-size: small;"> <%= ele.productDoc.discount %>% off</p>
                    </div>
                  </div>

                  <button class="btn btn-outline-primary btn-sm" onclick='addToCart("<%= ele._id %>")'>Add to Cart</button>
                </div>
                <% if (wishlist?.items) { %>
                  <% wishlist.items.forEach((item, index)=> { %>
                    <% if (String(item.variantId)==String(ele._id)) { %>
                      <% inWishlist=true %>
                      <i class="bi bi-heart-fill position-absolute top-0 end-0 mt-3 me-3 fs-4 d-none notInWishlist" onclick='addtoWishList("<%= ele._id %>", this)' style="color: grey;"></i>
                      <i class="bi bi-heart-fill position-absolute top-0 end-0 mt-3 me-3 fs-4 " onclick='removeFromWishlist("<%= ele._id %>", this)' style="color: tomato;"></i>
                    <% } %>
                  <% }) %>
                  <% if (!inWishlist) { %>
                    <i class="bi bi-heart-fill position-absolute top-0 end-0 mt-3 me-3 fs-4 notInWishlist" onclick='addtoWishList("<%= ele._id %>", this)' style="color: grey;"></i>
                    <i class="bi bi-heart-fill position-absolute top-0 end-0 mt-3 me-3 fs-4 d-none" onclick='removeFromWishlist("<%= ele._id %>", this)' style="color: tomato;"></i>
                  <% } %>
                  <% }else{ %>
                    <i class="bi bi-heart-fill position-absolute top-0 end-0 mt-3 me-3 fs-4" onclick='addNewtoWishList("<%= ele._id %>", this)' style="color: grey;"></i>
                  <% } %>
              </div>
            </div> 
          <% } %>           
        <% }) %>
       
      </div>
    </div>
  </section>

    <section id="offer" class="bg-light py-5">
    <div class="container-sm">
        <div class="d-flex justify-content-between">
            <h2 class="fs-3 mb-3">In offer</h2>
            <!-- <h2 class="align-self-end fs-6">view all</h2> -->
        </div>
      <div class="row row-cols-2 row-cols-md-3 row-cols-xl-4 row-cols-xxl-5 g-4">
        
        <% inOffer.forEach(ele => { %>
          <% if(ele.categoryDoc.isListed && ele.productDoc.isListed ){ %>
            <div class="col "  onclick='viewProduct("<%= ele._id %>")'>
              <div class="card product-card border border-0 shadow-sm position-relative">
                <img src="<%= ele.image[0] %>" class="card-img-top">
                <div class="card-body text-center">
                  <h6 class=""><%= ele.productDoc.name %></h6>
                  <p class="" style="font-size: small;"><%= ele.ram %> | <%= ele.storage %> | <%= ele.color %></p>

                  <% 
                    let price2 = Number(ele.price); 
                    let discount2 = Number(ele.productDoc.discount); 
                    let offAmount2 = price2 * (discount2 / 100); 
                    let finalPrice2 = Math.floor(price2 - offAmount2);
                  %>

                  <div class="d-flex gap-3 justify-content-center">
                    <p class="text-success" style="font-size: small;">&#8377; <%= finalPrice2 %></p>
                    <p class="text-decoration-line-through text-danger" style="font-size: small;">&#8377; <%= ele.price %></p>
                  </div>
                  <button class="btn btn-outline-primary btn-sm" onclick='addToCart("<%= ele._id %>")'>Add to Cart</button>
                </div>
                <% if (wishlist?.items) { %>
                  <% wishlist.items.forEach((item, index)=> { %>
                    <% if (String(item.variantId)==String(ele._id)) { %>
                      <% inWishlist=true %>
                      <i class="bi bi-heart-fill position-absolute top-0 end-0 mt-3 me-3 fs-4 d-none notInWishlist" onclick='addtoWishList("<%= ele._id %>", this)' style="color: grey;"></i>
                      <i class="bi bi-heart-fill position-absolute top-0 end-0 mt-3 me-3 fs-4 " onclick='removeFromWishlist("<%= ele._id %>", this)' style="color: tomato;"></i>
                    <% } %>
                  <% }) %>
                  <% if (!inWishlist) { %>
                    <i class="bi bi-heart-fill position-absolute top-0 end-0 mt-3 me-3 fs-4 notInWishlist" onclick='addtoWishList("<%= ele._id %>", this)' style="color: grey;"></i>
                    <i class="bi bi-heart-fill position-absolute top-0 end-0 mt-3 me-3 fs-4 d-none" onclick='removeFromWishlist("<%= ele._id %>", this)' style="color: tomato;"></i>
                  <% } %>
                  <% }else{ %>
                    <i class="bi bi-heart-fill position-absolute top-0 end-0 mt-3 me-3 fs-4" onclick='addNewtoWishList("<%= ele._id %>", this)' style="color: grey;"></i>
                  <% } %>
              </div>
            </div>  
          <% } %>        
        <% }) %>
        

      </div>
    </div>
  </section>

