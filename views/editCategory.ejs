                </div>
                <div class="test ps-2 pb-3 px-3 py-1">
                    <img class="position-absolute" src="images/admin-icons/logout.png" alt="" style="width: 25px;">
                    <a class="fs-6 px-3 pb-3 ms-3 mb-0 text-secondary text-decoration-none">Logout</a>
                </div>
            </div>

        </div>
        <div class="card flex-fill">

            <div class="card-body" style="background-color: #edededb8;">
                <div class="">
                    <h1 class="text-center m-b5">Edit category</h1>
                </div>
                <form action="/admin/EditCategory/<%= editName%>" method="post">
                    <div class="container">
                        <div class="row justify-content-center ">

                            <div class="col col-lg-7 my-4">
                                <div class="row align-items-center">
                                    <label for="category" class="col-2 col-form-label">Name</label>
                                    <div class="col-10">
                                        <input class="form-control w-100 pe-5 bg-white border-0" id="category"
                                            type="text" placeholder="Laptop" name="newName">
                                        <p class="text-danger" id="categoryMsg" style="font-size: small;"></p>
                                    </div>
                                </div>
                            </div>

                            <div class="col col-lg-7 my-4">
                                <div class="row align-items-center">
                                    <label for="status" class="col-2 col-form-label">Status</label>
                                    <div class="col-10">
                                        <select class="form-select w-100 pe-5 bg-white border-0" id="status"
                                            name="newStatus" required>
                                            <option value="active">Active</option>
                                            <option value="blocked">Blocked</option>
                                        </select>
                                    </div>
                                </div>
                            </div>

                            <div class="col-lg-7 d-flex justify-content-end my-4 gap-3">
                                <a href="/admin/category" role="button" type="submit" class="text-decoration-none text-light px-4 py-1 border-0 rounded bg-black">Cancel</a>
                                <button type="submit" class="text-light px-4 py-1 border-0 rounded" id="submitBtn" style="background-color: #EF6627;">Edit</button>
                            </div>

                        </div>
                    </div>

                </form>
            </div>
        </div>

        <script>

            document.getElementById("submitBtn").addEventListener('click', (event) => {

                const category = document.getElementById("category")
                const categoryRegex = /^\s*[A-Za-z]+(\s[A-Za-z]+)*\s*$/
                const categoryMsg = document.getElementById("categoryMsg")

                if(!categoryRegex.test(category.value)){
                    event.preventDefault()
                    categoryMsg.textContent = "Invalid category format"
                }
                else{
                    categoryMsg.textContent = ""
                }

            })

            const statuses = document.querySelectorAll('.status');

            statuses.forEach(status => {
                status.addEventListener('click', () => {
                    statuses.forEach(s => s.classList.remove('active'));
                    status.classList.add('active');
                });
            });

        </script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-FKyoEForCGlyvwx9Hj09JcYn3nv7wiPVlz7YYwJrWVcXK/BmnVDxM+D2scQbITxI"
            crossorigin="anonymous"></script>

