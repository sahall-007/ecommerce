        <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    
        <script>
            const variantId = "<%= variant._id %>"
            const productId = "<%= productId %>"
            const sidebar = document.querySelector('.sidebar');
            const toggleBtn = document.getElementById('menuToggle');

            toggleBtn.addEventListener('click', () => {
            sidebar.classList.toggle('show');
            });

            const statuses = document.querySelectorAll('.status');

            statuses.forEach(status => {
                status.addEventListener('click', () => {
                    statuses.forEach(s => s.classList.remove('active'));
                    status.classList.add('active');
                });
            });

            // document.addEventListener('DOMContentLoaded', () => {
                
            // })
            async function deleteImage(element, variantId, imageIndex) {

                const container = element.parentElement.parentElement

                try{

                    const data = await fetch('/admin/deleteImg', {
                        method: "POST",
                        headers: { "Content-Type": "application/json" },
                        body: JSON.stringify({ variantId, imageIndex})
                    })
                    .then((res) => {
                        if(res.ok){
                            container.remove()
                        }
                        else{
                            alert("not working")
                        }
                    })
                }
                catch(err){
                    alert("something went wrong (delete image)")
                    console.log(err)
                }
            }

            // to change the image
            let changeImgCropper;

            function changeImg(imageIndex) {
                // alert("working")
                const changeImg = document.getElementById(`changeImg${imageIndex}`)

                const file = changeImg.files[0]

                if(file){
                    const reader = new FileReader()
                    
                    reader.onload = (e) => {
                        const img = document.getElementById(`image${imageIndex}`)
                        img.src = e.target.result;

                        img.onload = function(){
                            changeImgCropper = new Cropper(img, {
                                aspectRatio: 1,
                                viewMode: 1,
                                preview: '.preview'
                            })
                            document.getElementById(`cropperButton${imageIndex}`).classList.remove("d-none")
                            document.getElementById(`deleteButton${imageIndex}`).classList.add("d-none")
                            document.getElementById(`changeButton${imageIndex}`).classList.add("d-none")
                        }
                        
                    }
                    
                    reader.readAsDataURL(file)

                }
            }
            
            let newCroppedBlobs = []


            // to crop the nely added image
            async function cropImage(element, imageIndex){
                event.preventDefault()

                const img = document.getElementById(`image${imageIndex}`)
                console.log(imageIndex)
                // console.log(img)

                let croppedCanvas = changeImgCropper.getCroppedCanvas()
                img.src = croppedCanvas.toDataURL('image/jpeg', 1.0);

                const siblingElement = img.nextElementSibling

                img.classList.remove("cropper-hidden")
                siblingElement.classList.add("d-none")


                // blob
                const blobPromise =  new Promise((resolve) => {
                    croppedCanvas.toBlob((blob) => {
                        resolve(blob);
                    }, "image/jpeg");
                });

                const croppedBlob = await blobPromise;

                croppedBlob.imageIndex = imageIndex
                newCroppedBlobs.push(croppedBlob)

                console.log("newcroppedblobs after pushing", newCroppedBlobs)

                setTimeout(() => {
                    croppers.pop()
                }, 100)

            }
            
            

            
            let croppers = []
            let count = 0

            function newFile(id){
               const imageInput = document.getElementById("image-" + id)                           
                const imageRow = document.getElementById("imageRow-" + id)

                const file = imageInput.files

                if(file){
                    for(let i=0; i<file.length; i++){

                        count+=1

                        imageRow.insertAdjacentHTML('beforeend', `
                            <div class="position-relative pb-5" id="imgContainer-${count}">
                                <div class="d-flex gap-3 position-absolute bottom-0 start-50 translate-middle-x">
                                    <button class="btn btn-dark text-light py-1 px-3  " id="cropperBtn${count}" onclick="cropImg(this, ${count}, ${id})">Crop</button>
                                    
                                </div>
                            </div>
                        `)
                                    // <button class="btn btn-danger text-light py-1 px-3 " id="deleteBtn${count}" onclick="deleteImg(this, ${count})">Delete</button>

                        const imgContainer = document.getElementById(`imgContainer-${count}`)

                        const reader = new FileReader()

                        reader.onload = (e) => {
                            const img = document.createElement('img');
                            img.src = e.target.result;
                            img.className = 'w-100 imageContainer';

                            img.onload = function () {
                                imgContainer.prepend(img);
                                // btn.classList.remove("d-none")

                                const cropper = new Cropper(img, {
                                    aspectRatio: 1,
                                    viewMode: 1,
                                    preview: '.preview'
                                })
                                croppers.push(cropper)

                            };
                        }
                        reader.readAsDataURL(file[i])
                    }         
                    console.log("cropper array after the loop", croppers)           
                }
                event.target.value = ''
            }

            let deleteCount = 0
            let extraCroppedBlobs = [];

            // to crop the extra added image
            async function cropImg(element, id, variantNumber) {
                event.preventDefault()
                // console.log("cropper array during btn click", croppers)
                const closeImg = element.parentElement.parentElement.querySelector("img")

                let croppedCanvas;

                if(id<=deleteCount){
                croppedCanvas = croppers[id-1].getCroppedCanvas()
                }
                else{
                    croppedCanvas = croppers[(id-1)-(deleteCount)].getCroppedCanvas()
                }

                closeImg.src = croppedCanvas.toDataURL('image/jpeg', 1.0);
                
                const siblingElement = closeImg.nextElementSibling

                closeImg.classList.remove("cropper-hidden")
                siblingElement.classList.add("d-none")

                // blob -------------------------

                const blobPromise = new Promise((resolve) => {
                    croppedCanvas.toBlob((blob) => {
                        resolve(blob);
                    }, "image/jpeg");
                });

                const croppedBlob = await blobPromise;

                croppedBlob.variant = variantNumber
                extraCroppedBlobs.push(croppedBlob)

                console.log("this is blob during btn click",  extraCroppedBlobs)

                setTimeout(() => {
                    croppers.pop()
                }, 100);
            }

            // to delete the extra added image
            function deleteImg(element, id){
                event.preventDefault()

                console.log("this is delete croppers", croppers)            
                
                if(id<=deleteCount){
                    croppers.splice(id-1, 1)         
                }
                else{
                    croppers.splice((id-1)-(deleteCount), 1)
                }

                deleteCount+=1

                const grandParent = element.parentElement.parentElement

                grandParent.classList.add("d-none")
            }

            // to submmit the variant form
            document.getElementById("submit").addEventListener('click', async () => {
                event.preventDefault()

                const ramRegex = /^(?=.*\S)\s*\d+\s*(GB|gb|MB|mb|TB|tb)\s*$/;
                const storageRegex = /^(?=.*\S)\s*\d+\s*(GB|gb|MB|mb|TB|tb)\s*$/;
                const colorRegex = /^(?=.*\S)\s*[A-Za-z]+(?:[ -][A-Za-z]+)*\s*$/;
                const quantityRegex = /^(?=.*\S)\s*\d+\s*$/;
                const priceRegex = /^(?=.*\S)\s*\d+(?:\.\d{1,2})?\s*$/;

                const ram = document.getElementById("ram-1")
                const storage = document.getElementById("storage-1")
                const color = document.getElementById("color-1")
                const quantity = document.getElementById("quantity-1")
                const price = document.getElementById("price-1")

                const ramMsg = document.getElementById("ramMsg-1");
                const storageMsg = document.getElementById("storageMsg-1");
                const colorMsg = document.getElementById("colorMsg-1");
                const quantityMsg = document.getElementById("quantityMsg-1");
                const priceMsg = document.getElementById("priceMsg-1");

                if( !ramRegex.test(ram.value) && !storageRegex.test(storage.value) && !colorRegex.test(color.value) && !storageRegex.test(quantity.value) && !priceRegex.test(price.value)){
                    
                    ramMsg.textContent = "invalid ram format"
                    storageMsg.textContent = "invalid storage format"
                    colorMsg.textContent = "invalid color format"
                    quantityMsg.textContent = "invalid quantity format"
                    priceMsg.textContent = "invalid price format"

                    window.location.href = "#card"

                    return 1
                }
                else if(!ramRegex.test(ram.value)){

                    ramMsg.textContent = "invalid ram format"
                    storageMsg.textContent = ""
                    colorMsg.textContent = ""
                    quantityMsg.textContent = ""
                    priceMsg.textContent = ""

                    window.location.href = "#card"

                    return 1
                }
                else if(!storageRegex.test(storage.value)){

                    ramMsg.textContent = ""
                    storageMsg.textContent = "invalid storage format"
                    colorMsg.textContent = ""
                    quantityMsg.textContent = ""
                    priceMsg.textContent = ""

                    window.location.href = "#card"

                    return 1
                }
                else if(!colorRegex.test(color.value)){

                    ramMsg.textContent = ""
                    storageMsg.textContent = ""
                    colorMsg.textContent = "invalid color format"
                    quantityMsg.textContent = ""
                    priceMsg.textContent = ""

                    window.location.href = "#card"

                    return 1
                }
                else if(!quantityRegex.test(quantity.value)){

                    ramMsg.textContent = ""
                    storageMsg.textContent = ""
                    colorMsg.textContent = ""
                    quantityMsg.textContent = "invalid quantity format"
                    priceMsg.textContent = ""

                    window.location.href = "#card"

                    return 1
                }
                else if(!priceRegex.test(price.value)){

                    ramMsg.textContent = ""
                    storageMsg.textContent = ""
                    colorMsg.textContent = ""
                    quantityMsg.textContent = ""
                    priceMsg.textContent = "invalid price format"

                    window.location.href = "#card"

                    return 1
                }
                else{
                    ramMsg.textContent = ""
                    storageMsg.textContent = ""
                    colorMsg.textContent = ""
                    quantityMsg.textContent = ""
                    priceMsg.textContent = ""
                }

                const form = document.getElementById("productForm")
                console.log(form)
                const formdata = new FormData(form)

                console.log("blob duirng publish", extraCroppedBlobs)

                newCroppedBlobs.forEach((blob, index) => {
                    console.log("this is blob during loop", blob)
                    formdata.append(`image-${blob.imageIndex}`, blob, `cropped-${index}.jpeg`);
                });

                extraCroppedBlobs.forEach((blob, index) => {
                    formdata.append(`image-${index}`, blob, `extraNewImage.jpeg`);
                });

                try{
                    alert("inside try")
                    const res = await fetch(`/admin/editVariant/${variantId}`, {
                        method: "POST",
                        body: formdata
                    })
                    .then((res) => {
                        if(res.status==200){
                            swal.fire({
                                title: "Success",
                                text: "Successfully added the product",
                                icon: "success",
                                timer: 30000
                            })
                            .then(() => window.location.href = `/admin/variant/${productId}` )
                        }
                        else{
                            swal.fire({
                                title: "Error",
                                text: "Failed to added the product",
                                icon: "error",
                                timer: 30000
                            })
                            .then(() => window.location.href = `/admin/variant/${productId}`)
                        }
                    })
                }
                catch(err){
                    console.log(err)
                }

            })



        </script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js"
