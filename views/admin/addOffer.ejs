            const searchResult = document.getElementById("searchResult")

            async function searchFilter(){

                searchResult.innerHTML = ""

                if(search.value==""){
                    searchResult.innerHTML = ""
                    searchResult.classList.add("d-none")
                    return 0
                }
                
                if(search.value==" "){
                    search.value = null
                    return 1
                }

                const result = await fetch('/admin/productSearch', {
                    method: "POST",
                    headers: { "Content-Type": "application/json" },
                    body: JSON.stringify({search: search.value})
                })

                
                const data = await result.json()

                searchResult.classList.remove("d-none")

                if(!data.product.length){
                    searchResult.classList.add("d-none")
                }

                for(let i=0; i<data.product.length; i++){
                    searchResult.insertAdjacentHTML('beforeend', `
                        <div class="">
                            <div class=" target text-decoration-none text-light d-flex justify-content-between  align-items-center">
                                <p class="mb-0 product-name">${data.product[i].name}</p>
                                <img src="/${data.product[i].variant.image[0]}" style="max-width: 40px; max-height: 40px">
                            </div>
                            <hr class="m-1">
                        </div>
                    `)
                    const targets = document.getElementsByClassName('target');
                        
                    targets[i].addEventListener('click', function(){                    

                        document.getElementById("checkbox-container").classList.remove("d-none")

                        const productName = targets[i].querySelector(".product-name").textContent;
                        const productId = data.product[i]._id

                        document.getElementById("product-container").insertAdjacentHTML('beforeend', `
                        <div>
                            <input class="product-names" name="product" value="${productId}" type="checkbox" id="product-${i}" checked>
                            <label for="product-${i}">${productName}</label>
                        </div>
                        `)

                    })
                }    
                    
            }

