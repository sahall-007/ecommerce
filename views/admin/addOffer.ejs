            document.getElementById("offerType").addEventListener('change', offerType)
            
            function offerType() {
                const offerType = document.getElementById("offerType").value
                const productSearch = document.getElementById("productSearch")
                const categoryOptions = document.getElementById("categoryOptions")
                const brandOptions = document.getElementById("brandOptions")

                if(offerType=="product"){
                    productSearch.classList.remove("d-none")
                    categoryOptions.classList.add("d-none")
                    brandOptions.classList.add("d-none")
                }
                else if(offerType=="category"){
                    productSearch.classList.add("d-none")
                    categoryOptions.classList.remove("d-none")
                    brandOptions.classList.add("d-none")
                }
                else if(offerType=="brand"){
                    productSearch.classList.add("d-none")
                    categoryOptions.classList.add("d-none")
                    brandOptions.classList.remove("d-none")
                }
                else {
                    productSearch.classList.add("d-none")
                    categoryOptions.classList.add("d-none")
                    brandOptions.classList.add("d-none")
                }
            }

            const submitBtn = document.getElementById("submitBtn")
            submitBtn.addEventListener('click', async (event) => {
                event.preventDefault()
                
                const offerNameRegex = /^[A-Za-z][A-Za-z]{3,15}$/
                const discountRegex = /^(99|[1-9]?[0-9])$/

                const offerNameMsg = document.getElementById("offerNameMsg")
                const discountMsg = document.getElementById("discountMsg")
                
                const offerName = document.getElementById('offerName').value
                const discount = document.getElementById("discount").value
                const offerType = document.getElementById("offerType").value
                const categoryName = document.getElementById("categoryName").value
                const brandName = document.getElementById("brandName").value

                const productName = document.querySelectorAll('input[name="product"]:checked')
                const product = Array.from(productName).map(ele => ele.value)
                
                if(!offerType){
                    swal.fire({
                        icon: "warning",
                        title: "Warning",
                        text: "Select an offer type"
                    })

                    return
                }
                else if(offerType=="product"){
                    const productName = document.querySelectorAll('input[name="product"]:checked')

                    const product = Array.from(productName)

                    if(product.length <= 0){
                        swal.fire({
                            icon: "warning",
                            title: "Warning",
                            text: "Select atleast one product"
                        })

                        return
                    }
                }
                
                if(!offerNameRegex.test(offerName)){
                    offerNameMsg.textContent = "Field required. Should not be empty and characters should be between 3 to 15"
                    discountMsg.textContent = ""
                    
                    return
                }
                else if(!discountRegex.test(discount)){
                    offerNameMsg.textContent = ""                    
                    discountMsg.textContent = "Enter a valid number between 1 to 99"

                    return
                }                
                else{
                    offerNameMsg.textContent = ""    
                    discountMsg.textContent = ""
                }

                try{
                    const request = await fetch('/admin/addOffer', {
                        method: "POST",
                        headers: { "Content-Type": "application/json" },
                        body: JSON.stringify({ offerName, discount, offerType, category: categoryName, brand:  brandName, product })
                    })

                    if(request.status==200){
                        swal.fire({
                            icon: "success",
                            title: "Success",
                            text: "Successfully created new offer"
                        })
                        .then(() => window.location.href = "/admin/offer")
                    }
                    else if(request.status==400){
                        swal.fire({
                            icon: "error",
                            title: "Error",
                            text: "Offer with this name already exist"
                        })
                    }
                }
                catch(err){
                    alert("offer submit error")
                    console.log(err)
                }
            })

            const statuses = document.querySelectorAll('.status');

            statuses.forEach(status => {
                status.addEventListener('click', () => {
                    statuses.forEach(s => s.classList.remove('active'));
