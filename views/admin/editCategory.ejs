<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit category page</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css">
    <style>
        .test:hover {
            background-color: rgb(238, 238, 238);
        }

        .add-user-btn {
            background-color: #EF6627;
            /* border: none; */
        }

        .active::after {
            content: '';
            display: block;
            position: absolute;
            width: 100%;
            height: 3px;
            background: black;
            bottom: -7px;
        }

        .actions {
            color: #151414;
        }
        .sidebar {
            transition: transform 0.3s ease;
        }
        @media (max-width: 767.98px) {
        .sidebar {
            position: fixed;
            top: 56px; /* height of navbar */
            left: 0;
            width: 200px;
            height: 100vh;
            background-color: #000;
            color: white;
            z-index: 1050;
            transform: translateX(-100%);
        }

        .sidebar.show {
            transform: translateX(0);
        }
        }
    </style>
</head>

<body>

   <!-- //  ========== NAVBAR ========== -->

    <%- include("../partials/admin/navbar.ejs") %>

    <div class="d-flex gap-5 m-5">
        <div class=" d-inline-block border border-secondary text-secondary rounded sidebar align-self-start py-3"
            style="padding-bottom: -100px;">
            
            <%- include("../partials/admin/sidebarLinks.ejs") %>

        </div>
        <div class="card flex-fill">

            <div class="card-body" style="background-color: #edededb8;">
                <div class="">
                    <h1 class="text-center m-b5">Edit category</h1>
                </div>
                <form action="/admin/EditCategory/<%= editName %>" method="post">
                    <div class="container">
                        <div class="row row-cols-1 justify-content-center ">

                            <div class="col col-lg-7 my-4">
                                <div class="row align-items-center">
                                    <label for="category" class="col-2 col-form-label">Name</label>
                                    <div class="col-10">
                                        <input class="form-control w-100 pe-5 bg-white border-0" id="category"
                                            type="text"  name="newName" value="<%= editName %>"">
                                        <p class="text-danger" id="categoryMsg" style="font-size: small;"></p>
                                    </div>
                                </div>
                            </div>

                            <div class="col col-lg-7 my-4">
                                <div class="row align-items-center">
                                    <label for="status" class="col-2 col-form-label">Status</label>
                                    <div class="col-10">
                                        <select class="form-select w-100 pe-5 bg-white border-0" id="status"
                                            name="newStatus" required>
                                            <option value="active">Active</option>
                                            <option value="blocked">Blocked</option>
                                        </select>
                                    </div>
                                </div>
                            </div>

                            <div class="col-lg-7 d-flex justify-content-end my-4 gap-3">
                                <a href="/admin/category" role="button" type="submit" class="text-decoration-none text-light px-4 py-1 border-0 rounded bg-black">Cancel</a>
                                <button type="submit" class="text-light px-4 py-1 border-0 rounded" id="submitBtn" style="background-color: #EF6627;">Edit</button>
                            </div>

                        </div>
                    </div>

                </form>
            </div>
        </div>


        <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
        <script>
            const sidebar = document.querySelector('.sidebar');
            const toggleBtn = document.getElementById('menuToggle');

            toggleBtn.addEventListener('click', () => {
            sidebar.classList.toggle('show');
            });

            const editName = "<%= editName %>"

            document.getElementById("submitBtn").addEventListener('click', (event) => {
                
                event.preventDefault()

                const category = document.getElementById("category")
                const status = document.getElementById("status")
                const categoryRegex = /^\s*[A-Za-z]+(\s[A-Za-z]+)*\s*$/
                const categoryMsg = document.getElementById("categoryMsg")

                if(!categoryRegex.test(category.value)){
                    categoryMsg.textContent = "Invalid category format"
                    return 1
                }
                else{
                    categoryMsg.textContent = ""
                }

                try{
                    const result = fetch(`/admin/EditCategory/${editName}`, {
                        method: "POST",
                        headers: { "Content-Type": "application/json" },
                        body: JSON.stringify({ newName: category.value, newStatus: status.value })
                    })
                    .then((res) => {
                        console.log(res)
                        if(res.status==200){
                            swal.fire({
                                title: "category edited successfully",
                                icon: "success",
                                timer: 1500
                            })
                            .then(() => window.location.href = "/admin/category")
                        }
                        else{
                            swal.fire({
                                title: "Failed to edit category",
                                text: "category already exist",
                                icon: "error",
                                timer: 1500
                            })
                        }
                    })
                }
                catch(err){
                    conosle.log(err)
                }

            })

            const statuses = document.querySelectorAll('.status');

            statuses.forEach(status => {
                status.addEventListener('click', () => {
                    statuses.forEach(s => s.classList.remove('active'));
                    status.classList.add('active');
                });
            });

        </script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-FKyoEForCGlyvwx9Hj09JcYn3nv7wiPVlz7YYwJrWVcXK/BmnVDxM+D2scQbITxI"
            crossorigin="anonymous"></script>

</body>

</html>