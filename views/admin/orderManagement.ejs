
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Product Management</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css">
    <style>
        .test:hover {
            background-color: rgb(238, 238, 238);
        }

        .add-user-btn {
            background-color: #EF6627;
            /* border: none; */
        }

        .active::after {
            content: '';
            display: block;
            position: absolute;
            width: 100%;
            height: 3px;
            background: black;
            bottom: -7px;
        }

        .actions {
            color: #151414;
        }
        .sidebar {
            transition: transform 0.3s ease;
        }
        @media (max-width: 767.98px) {
        .sidebar {
            position: fixed;
            top: 56px; /* height of navbar */
            left: 0;
            width: 200px;
            height: 100vh;
            background-color: #000;
            color: white;
            z-index: 1050;
            transform: translateX(-100%);
        }

        .sidebar.show {
            transform: translateX(0);
        }
        }
        .product-img {
            width: 80px;
            height: 80px;
            object-fit: cover;
        }
        .card {
            transition: all 0.2s;
        }

        .card:hover {
            transform: translateY(-4px);
            box-shadow: 0 12px 30px rgba(0, 0, 0, 0.12) !important;
        }
    </style>
</head>

<body class="bg-light">

    <!-- <% var sample = 11111; %> -->

    <nav class="navbar bg-black">
        <div class="container">
            <a class="navbar-brand text-light" href="#">
                <i class="bi bi-box me-2"></i> ShopEase
            </a>
            <button class="navbar-toggler d-md-none border-0" type="button" id="menuToggle">
                <span class="navbar-toggler-icon"></span>
            </button>
            <a href="/admin/logout" class="btn btn-outline-light d-md-block d-none">logout</a>
        </div>
    </nav>


    <div class="container px-0 mt-5">

        <div class="d-flex justify-content-between">
            <h2 class="mb-5 fw-bold">Your Orders</h2>
            <!-- HAMBURGER BUTTON (Visible only on mobile/tablet) -->
            <div class="">
                <button class="btn btn-dark rounded-circle shadow-lg" type="button" data-bs-toggle="offcanvas" data-bs-target="#orderFilters">
                    <i class="bi bi-funnel fs-4"></i>
                </button>
            </div>
        </div>
        
        <div class="row row-cols-1 gap-5">
            <!-- ============= FILTER SIDE BAR ============= -->
            <div class="offcanvas offcanvas-start bg-white border-0 shadow-lg" tabindex="-1" id="orderFilters" style="width: 320px; z-index: 9999;">
                <div class="offcanvas-header border-bottom">
                    <h5 class="offcanvas-title fw-bold">
                        <i class="bi bi-funnel-fill me-2 text-primary"></i> Filters
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="offcanvas"></button>
                </div>
                <div class="offcanvas-body pt-4">

                    <!-- Search -->
                    <div class="mb-4">
                        <input type="text" class="form-control form-control-lg" placeholder="Search orders...">
                    </div>
                    <hr class="my-4">

                    <!-- Status Filter -->
                    <h6 class="fw-bold mb-3">Status</h6>
                    <div class="form-check mb-3">
                        <input class="form-check-input" type="checkbox" id="mob-pending">
                        <label class="form-check-label" for="mob-pending">Pending</label>
                    </div>
                    <div class="form-check mb-3">
                        <input class="form-check-input" type="checkbox" id="mob-shipped">
                        <label class="form-check-label" for="mob-shipped">Shipped</label>
                    </div>
                    <div class="form-check mb-3">
                        <input class="form-check-input" type="checkbox" id="mob-delivered">
                        <label class="form-check-label" for="mob-delivered">Delivered</label>
                    </div>
                    <div class="form-check mb-4">
                        <input class="form-check-input" type="checkbox" id="mob-cancelled">
                        <label class="form-check-label" for="mob-cancelled">Cancelled</label>
                    </div>

                    <hr class="my-4">

                    <!-- Order Date -->
                    <h6 class="fw-bold mb-3">Orders</h6>
                    <select class="form-select mb-4">
                        <option>Newest First</option>
                        <option>Oldest First</option>
                    </select>

                    <!-- Price -->
                    <h6 class="fw-bold mb-3">Price</h6>
                    <select class="form-select">
                        <option>High to Low</option>
                        <option selected>Low to High</option>
                    </select>

                </div>
            </div>
            <!-- =========================================== -->
            <div class=" col col-md-3 col-lg-2 border border-secondary rounded text-secondary sidebar align-self-start p-0">
                <div class="">

                    <div onclick="location.href='/admin/dashboard'" class="test ps-2 pb-3 px-3 py-1">
                        <img class="position-absolute" src="images/admin-icons/dashboard.png" alt="" style="width: 25px;">
                        <a href="/admin/dashboard" class="fs-6 pb-3 px-3 py-1 ms-3 mb-0 text-secondary text-decoration-none">Dashboard</a>
                    </div>

                    <div onclick="location.href='/admin/product'" class="test ps-2 pb-3 px-3 py-1">
                        <img class="position-absolute" src="images/admin-icons/products.png" alt="" style="width: 25px;">
                        <a href="/admin/product" class="fs-6 pb-3 px-3 py-1 ms-3 mb-0 text-secondary text-decoration-none">Product</a>
                    </div>

                    <div onclick="location.href='/admin/category'" class="test ps-2 pb-3 px-3 py-1">
                        <img class="position-absolute" src="images/admin-icons/category.png" alt="" style="width: 25px;">
                        <a class="fs-6 pb-3 px-3 py-1 ms-3 mb-0 text-secondary text-decoration-none">Category</a>
                    </div>

                    <div class="test ps-2 pb-3 px-3 py-1">
                        <img class="position-absolute" src="images/admin-icons/order.png" alt="" style="width: 25px;">
                        <a class="fs-6 pb-3 px-3 py-1 ms-3 mb-0 text-secondary text-decoration-none">Order</a>
                    </div>

                    <div class="test ps-2 pb-3 px-3 py-1">
                        <img class="position-absolute" src="images/admin-icons/coupon.png" alt="" style="width: 25px;">
                        <a class="fs-6 pb-3 px-3 py-1 ms-3 mb-0 text-secondary text-decoration-none">Coupon</a>
                    </div>

                    <div class="test ps-2 pb-3 px-3 py-1">
                        <img class="position-absolute" src="images/admin-icons/transaction.png" alt="" style="width: 25px;">
                        <a class="fs-6 pb-3 px-3 py-1 ms-3 mb-0 text-secondary text-decoration-none">Transactions</a>
                    </div>

                    <div class="test ps-2 pb-3 px-3 py-1">
                        <img class="position-absolute" src="images/admin-icons/offer.png" alt="" style="width: 25px;">
                        <a class="fs-6 pb-3 px-3 py-1 ms-3 mb-0 text-secondary text-decoration-none">Offer</a>
                    </div>
                    
                    <div onclick="location.href='/admin/brand'" class="test ps-2 pb-3 px-3 py-1">
                        <img class="position-absolute" src="images/admin-icons/offer.png" alt="" style="width: 25px;">
                        <a class="fs-6 pb-3 px-3 py-1 ms-3 mb-0 text-secondary text-decoration-none">Brand</a>
                    </div>
                    
                </div>

                <div class="my-5">
                    <div class="test ps-2 pb-3 px-3 py-1">
                        <img class="position-absolute" src="images/admin-icons/admin.png" alt="" style="width: 25px;">
                        <a class="fs-6 pb-3 px-3 py-1 ms-3 mb-0 text-secondary text-decoration-none">Admins</a>
                    </div>
                    <div onclick="location.href='/admin/userManagement'" class="test ps-2 pb-3 px-3 py-1">
                        <img class="position-absolute" src="images/admin-icons/user.png" alt="" style="width: 25px;">
                        <a class="fs-6 pb-3 px-3 py-1 ms-3 mb-0 text-secondary text-decoration-none">customers</a>
                    </div>
                </div>

                <div>
                    
                    <div onclick="location.href='/admin/logout'" class="test ps-2 pb-3 px-3 py-1">
                        <img class="position-absolute" src="images/admin-icons/logout.png" alt="" style="width: 25px;">
                        <a href="/admin/logout" class="fs-6 px-3 pb-3 ms-3 mb-0 text-secondary text-decoration-none">Logout</a>
                    </div>
                </div>

            </div>
            <div class="col-12 col-md-7 ">
                <% orders.forEach(ele => { %>
                
                    <div class="card mb-4 shadow border-0 rounded-4 overflow-hidden position-relative">
                        <div class="card-body p-4">                            
                            <div class="d-flex align-items-center justify-content-between flex-wrap gap-3 mb-4">
                                <div class="d-flex align-items-center gap-3 flex-wrap ">
                                    
                                    <% let limit = (ele.items.length > 3) ? 3 : ele.items.length %>
                                    <% for(let i=0; i<limit; i++){ %>   
                                        <div>
                                            <img src="/<%= ele.items[i].image %>"
                                            class="rounded-3 border product-img " alt="Watch">
                                            <h1 class="mb-0 fw-light mt-1 ms-1" style="font-size: small;">Qty: <%= ele.items[i].quantity %></h1>
                                        </div>                                     
                                    <% } %>
                                    <% if(ele.items.length > 3){ %>
                                        <div>
                                            <div class="d-flex align-items-center justify-content-center bg-light rounded-3 border product-img">
                                                <small class="text-muted fw-bold"><%= ele.items.length - limit %> more...</small>                                             
                                            </div>
                                            <h1 class="mb-0 fw-light mt-1 ms-1" style="font-size: small; visibility: hidden;">-</h1>
                                        </div>
                                    <% } %>                                        
                                </div>

                                <span class="d-block text-dark position-absolute top-0 end-0 mt-2 me-2"><%= ele.userId.email %></span>
                                <!-- <span class=" bg-warning text-dark rounded px-4 py-1 fs-6"><%= ele.status %></span> -->
                                
                            </div>

                            <hr class="my-4">

                            <div class="row text-secondary fs-6">
                                <div class="col-6 col-md-4 mb-3">
                                    <strong class="text-dark">Order ID:</strong>
                                    <span class=" fw-bold ms-2"><%= ele.orderId %></span>
                                </div>

                                <!-- <div class="col-6 col-md-4 mb-3">
                                    <strong class="text-dark">Email:</strong>
                                    <span class=" fw-bold ms-2"><%= ele.userId.email %></span>
                                </div> -->

                                <div class="col-6 col-md-4 mb-3">
                                    <strong class="text-dark">Payment Method: </strong>
                                    <span class=" ms-2"><%= ele.paymentMethod %></span>
                                </div>

                                <div class="col-6 col-md-4 mb-3">
                                    <strong class="text-dark">Total: </strong>
                                    <span class="fs-5 fw-bold text-success ms-2">&#8377; <%= ele.finalPrice %></span>
                                </div>

                                <div class="col-6 col-md-4 mb-3 text-md-end text-lg-start">
                                    <strong>Coupon code: </strong>
                                    <span class="text-primary px-2 py-1 ms-2">Null</span>
                                </div>

                                <div class="col-6 col-md-4 mb-3">
                                    <strong class="text-dark">Items: </strong>
                                    <span class="text-dark"><%= ele.items.length %></span>
                                </div>

                                <!-- <div class="col-6 col-md-4 mb-3 text-md-end text-lg-start">
                                    <strong>Delivery address:</strong>
                                    <small class="text-dark ms-2">John Doe123 Art Avenue, Suite 456Creative City, Artland</small>
                                </div> -->

                                <div class="col-12 col-md-4 mb-3">
                                    <strong class="text-dark">Order date:</strong>
                                    <span class="text-dark">
                                        <%= new Date(ele.placedAt).toLocaleDateString('en-GB', {
                                            weekday: 'short',
                                            day: 'numeric',
                                            month: 'short',
                                            year: 'numeric',
                                        }) %>
                                    </span>
                                </div>
                            </div>

                            <div class="d-flex gap-2 justify-content-center">
                                <div class=" mt-3">
                                    <button class="btn btn-dark  px-4 py-2 fw-bold"  onclick="location.href='/admin/orderDetail/<%= ele._id %>'">View Details</button>
                                </div>
                                <!-- <div class=" mt-3">
                                    <button class="btn btn-danger  px-4 py-2 fw-bold">Cancel all</button>
                                </div> -->
                            </div>
                            
                        </div>
                    </div>

                <% }) %>
            </div>
            
    </div>
    </div>


    <!-- <div class="card d-inline-block px-5 position-fixed top-50 start-50 translate-middle"> -->
<!----------------------  delete modal  ----------------------->
    <div class="modal fade" id="deleteModal">
        <div class="modal-dialog">
            <div class="modal-content">

                <div class="modal-body px-5">
                    <h1 class="fs-2 text-center mt-2 mb-4">Delete</h1>
                    <p class="fs-6 text-center mb-4">Are you sure?</p>
                    <div class="d-flex justify-content-center gap-3 mb-3">
                        <button class="border-0 rounded px-3 py-1 bg-black text-light"
                            data-bs-dismiss="modal">Cancel</button>
                        <button class="border-0 rounded px-3 py-1 text-light"
                            style="background-color: #EF6627;" onclick="confirmDelete()">Confirm</button>
                    </div>
                </div>

            </div>
        </div>
    </div>

<!----------------------  block modal  ----------------------->
    <div class="modal fade" id="blockModal">
        <div class="modal-dialog">
            <div class="modal-content">

                <div class="modal-body px-5">
                    <h1 class="fs-2 text-center mt-2 mb-4">Block</h1>
                    <p class="fs-6 text-center mb-4">Are you sure?</p>
                    <div class="d-flex justify-content-center gap-3 mb-3">
                        <button class="border-0 rounded px-3 py-1 bg-black text-light"
                            data-bs-dismiss="modal">Cancel</button>
                        <button class="border-0 rounded px-3 py-1 text-light"
                            style="background-color: #EF6627;" onclick="confirmBlock()" data-bs-dismiss="modal">Confirm</button>
                    </div>
                </div>

            </div>
        </div>
    </div>

<!----------------------  unblock modal  ----------------------->
    <div class="modal fade" id="unBlockModal">
        <div class="modal-dialog">
            <div class="modal-content">

                <div class="modal-body px-5">
                    <h1 class="fs-2 text-center mt-2 mb-4">Unblock</h1>
                    <p class="fs-6 text-center mb-4">Are you sure?</p>
                    <div class="d-flex justify-content-center gap-3 mb-3">
                        <button class="border-0 rounded px-3 py-1 bg-black text-light"
                            data-bs-dismiss="modal">Cancel</button>
                        <button class="border-0 rounded px-3 py-1 text-light"
                            style="background-color: #EF6627;" onclick="confirmUnBlock()">Confirm</button>
                    </div>
                </div>

            </div>
        </div>
    </div>

    

    <script>
        const sidebar = document.querySelector('.sidebar');
            const toggleBtn = document.getElementById('menuToggle');

            toggleBtn.addEventListener('click', () => {
            sidebar.classList.toggle('show');
            });

        const statuses = document.querySelectorAll('.status')
              
        statuses.forEach(status => {
            status.addEventListener('click', () => {
                statuses.forEach(s => s.classList.remove('active'));
                status.classList.add('active');
            });
        });

        let editId, blockId, unBlockId, deleteId

        function block(id){
            event.stopPropagation();
            blockId = id
        }

        function unBlock(id){
            event.stopPropagation();
            unBlockId = id
            console.log(id)
        }

        function deleteCategory(id){
            event.stopPropagation();
            deleteId = id
        }

        async function confirmBlock(){
            console.log("its hitting.........")
            const res = await fetch('/admin/blockProduct', {
                method: "PATCH",
                headers: { "Content-Type": "application/json" },
                body: JSON.stringify({ id: blockId })
            })
            .then(() => window.location.reload())
        }

        async function confirmUnBlock(){
            console.log("un block confirm")
            const res = await fetch('/admin/unblockProduct', {
                method: "PATCH",
                headers: { "Content-Type": "application/json" },
                body: JSON.stringify({ id: unBlockId })
            })
            .then(() => window.location.reload())
        }

        async function confirmDelete(){
            console.log("delte confirm")
            const res = await fetch('/admin/deleteProduct', {
                method: "DELETE",
                headers: { "Content-Type": "application/json" },
                body: JSON.stringify({ id: deleteId })
            })
            .then(() => window.location.reload())
        }

        async function productInfo(id){
            window.location.href = `/admin/variant/${id}`
        }


    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-FKyoEForCGlyvwx9Hj09JcYn3nv7wiPVlz7YYwJrWVcXK/BmnVDxM+D2scQbITxI"
        crossorigin="anonymous"></script>

</body>

</html>