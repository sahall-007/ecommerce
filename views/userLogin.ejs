<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login page</title>
    <link rel="stylesheet" href="/register.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB" crossorigin="anonymous">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
        href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100..900;1,100..900"
        rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css">
</head>

<body>
    <div class="container-lg ">
        <div class="row justify-content-center align-items-center">
            <div class="col-7 d-none d-sm-block">
                <img src="/images/login1.jpg" alt="login image" style="width: 90%;">
            </div>
            <div class="col-10 col-sm-5 d-flex justify-content-center">
                <div class="register-form">

                    <h1 class="fs-1">Welcome back</h1>
                    <p class="fs-6">Enter your details below</p>

                    <form action="/login" method="post" class="" id="form">

                    
                        <!-- <div class="form-field mt-5 mb-4 position-relative">
                            <i class="bi bi-person-fill position-absolute pe-3 end-0"></i>
                            <input class="w-100 pe-5" type="text" id="username" placeholder="Username" name="username">
                            <p class="text-danger" id="usernameMsg" style="font-size: small;  max-width: 320px;"></p>
                        </div> -->

                        <div class="form-field mt-5 mb-4 position-relative">
                            <i class="bi bi-envelope-fill position-absolute pe-3 end-0"></i>
                            <input class="w-100 pe-5" type="text" id="email" placeholder="Email" name="email">
                            <p class="text-danger" id="emailMsg" style="font-size: small;  max-width: 320px;"></p>
                        </div>

                        <div class="form-field  position-relative">
                            <i class="bi bi-lock-fill position-absolute pe-3 end-0"></i>
                            <input class="w-100 pe-5" type="password" id="password" placeholder="Password" name="password">
                            <p class="text-danger" id="passMsg" style="font-size: small;  max-width: 320px;"></p>
                        </div>

                        <div class="mt-2 mb-4">
                            <a class="text-decoration-none fs-6" href="/forgotPassword">Forgot password ?</a>

                        </div>

                        <div>
                            <button id="submitBtn" class="submit-btn w-100 rounded" type="submit">confirm Login</button>
                        </div>


                    </form>

                    <a href="/auth/google" class="btn border border-dark bg-transparent mt-4 w-100 py-1 rounded"><img class="pe-4" src="/images/google-logo.png" alt="google logo" style="width: 15%;">Login with google</a>

                    <p class="have-account my-3">Don't have an account? <a href="/register">Register</a></p>

                </div>
            </div>
        </div>


    </div>


    <script src="https://apis.google.com/js/platform.js" async defer></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-FKyoEForCGlyvwx9Hj09JcYn3nv7wiPVlz7YYwJrWVcXK/BmnVDxM+D2scQbITxI"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>

        const submitBtn = document.getElementById("submitBtn")

        // const usernameRegex = /^[A-Za-z][A-Za-z]{3,15}$/
        const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
        const passwordRegex = /^(?=.*[0-9])(?=.*[!@#$%^&*])(?=.*[A-Za-z])[A-za-z0-9!@#$%^&*]{8,15}$/

        // const usernameMsg = document.getElementById("usernameMsg")
        const emailMsg = document.getElementById("emailMsg")
        const passMsg = document.getElementById("passMsg")

        submitBtn.addEventListener('click', async (event) => {

            event.preventDefault()

            // const username = document.getElementById("username")
            const email = document.getElementById("email")
            const password = document.getElementById("password")

            if(!emailRegex.test(email.value) && !passwordRegex.test(password.value) ){
                // usernameMsg.textContent = "Must be 3 to 15 chars long. should only contain letters"
                emailMsg.textContent = "Use a email address like john.doe@example.com characters like these are allowed: . _ % + -"
                passMsg.textContent = "Must be 8–15 chars long containing atleast 1 letter, 1 number and 1 symbol: !@#$%^&*"

                return 1
            }
            else if(!emailRegex.test(email.value)){
                // usernameMsg.textContent = ""
                emailMsg.textContent = "Use a email address like john.doe@example.com characters like these are allowed: . _ % + -"
                passMsg.textContent = ""                

                return 1
            }
            else if(!passwordRegex.test(password.value)){
                // usernameMsg.textContent = ""
                emailMsg.textContent = ""
                passMsg.textContent = "Must be 8–15 chars long containing atleast 1 letter, 1 number and 1 symbol: !@#$%^&*"                  

                return 1
            }
            else{
                // usernameMsg.textContent = ""
                emailMsg.textContent = ""
                passMsg.textContent = ""                
            }

            try{
                const res = await fetch('/login', {
                    method: "POST",
                    headers: { "Content-Type": "application/json" },
                    body: JSON.stringify({ email: email.value, password: password.value })
                })

                if(res.status==404){
                    swal.fire({
                        title: "Error",
                        text: "Email not found in the database",
                        icon: "error",
                    })
                }
                else if(res.status==401){
                    swal.fire({
                        title: "Error",
                        text: "Invalid email or password",
                        icon: "error"
                    })
                }
                else if(res.status==200){
                    window.location.href = "/"
                }

            }
            catch(err){
                alert("admin login error")
                console.log("admin login error", err)
            }

        })




        



    </script>

</body>

</html>