            <div class="card col col-md-8 col-lg-9  px-0 mx-3">
                <div class="card-header">
                    <h1 class="text-center">Variant Management</h1>

                    <div class="container">
                        <div class="row justify-content-between my-5">

                        <div class="col-3 d-flex justify-content-around border-bottom border-3 align-self-start pb-1 user-status">
                            <h1 class="fs-6 m-0 align-self-start position-relative flex-fill text-center status active">All
                            </h1>
                            <h1 class="fs-6 m-0 align-self-start position-relative flex-fill text-center status">Blocked
                            </h1>
                            <h1 class="fs-6 m-0 align-self-start position-relative flex-fill text-center status">Active</h1>
                        </div>

                        <!-- <form action="" class="col-4 align-self-start d-flex gap-2" method="post">
                            <input class="form-control me-2 " name="name" type="search" placeholder="Search" aria-label="Search" />
                            <button class="btn btn-outline-success" type="submit">Search</button>
                        </form> -->

                        <div class="col-2 d-flex justify-content-end  align-self-start">
                            <a role="button" href="/admin/addVariant/<%= variants[0].productId %>"
                                class="add-user-btn text-light border-0 rounded px-4 py-1 text-decoration-none">Add new</a>
                        </div>

                    </div>
                    </div>
                    
                </div>
                <div class="card-body">
                    <div class="">

                        <% if (variants) { %>
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>No.</th>
                                        <th> RAM </th>
                                        <th> Storage </th>
                                        <th> Color </th>
                                        <th> Quantity </th>
                                        <th> Price </th>
                                        <th> status </th>
                                        <th> Actions </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% variants.forEach((variant, index) => { %>

                                        <tr>
                                            <td><%= index+1 %></td>
                                            <td class="py-1">
                                                <%= variant.ram %>
                                            </td>
                                            <td>
                                                <%= variant.storage %>
                                            </td>
                                            <td>
                                                <%= variant.color%>
                                            </td>
                                            <td>
                                                <%= variant.quantity %>
                                            </td>
                                            <td>
                                                <%= variant.price %>
                                            </td>

                                            <% if(variant.isListed) { %>
                                                <td class="text-success">Active</td>
                                            <% } else{ %>
                                                <td class="text-danger">blocked</td>
                                            <% } %>

                                            <td>
                                                <div class="d-flex gap-4 ">

                                                    <a class="actions"   onclick='editCategory("<%= variant._id%>")' ><i class="bi bi-pencil"></i></a>
                                                    <% if(variant.isListed) { %>
                                                        <a class="actions block-btn"  onclick='block("<%= variant._id%>")' data-bs-toggle="modal" data-bs-target="#blockModal"><i class="bi bi-eye"></i></a>
                                                    <% } else{ %>
                                                        <a class="actions " onclick='unBlock("<%= variant._id%>")' data-bs-toggle="modal" data-bs-target="#unBlockModal"><i class="bi bi-eye-slash"></i></a>
                                                    <% } %>
                                                </div>
                                            </td>
                                        </tr>
                                    <% }) %>
                                </tbody>
                            </table>
                        <% } else { %>
                            <h1 class="text-center mt-5"> There is no data</h1>
                        <% } %>
                    </div>
                </div>

                    <div class="mb-4 mx-auto">
                        <a href="/admin/product/prev?page=<%= prevPage %>" class="text-light btn bg-secondary rounded border-0 px-3 py-1 <%= prevDisable %>"  >Prev</a>
                        <a href="/admin/product/next?page=<%= nextPage %>" class="text-light btn rounded border-0 px-3 py-1 <%= nextDisable %>" style="background-color: #EF6627;">Next</a>
                    </div>

            </div>
    </div>
    </div>


